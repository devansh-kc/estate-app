generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  Post      Post[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  price     Int
  img       String
  address   String
  city      String
  bedroom   Int
  bathroom  Int
  latitude  String
  longitude String
  type      Type
  property  Property
  user      User     @relation(fields: [UserId], references: [id])
  UserId    String   @db.ObjectId

  createdAt DateTime @default(now())
}

enum Type {
  buy
  rent
}

enum Property {
  condo
  flat
  land
  banglow
}
